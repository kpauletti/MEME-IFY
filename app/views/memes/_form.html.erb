<%= form_for @meme, html: { multipart: true } do |f| %>
  <% if @meme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meme.errors.count, "error") %> prohibited this meme from being saved:</h2>

      <ul>
      <% @meme.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image, class: "btn btn-dark" do  %>
      Choose file
      <%= f.file_field :image, :class => "d-none" %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => "btn btn-dark" %>
  </div>
<% end %>
